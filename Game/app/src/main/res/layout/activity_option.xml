<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thong.game.OptionActivity">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="OPTION"
        android:textSize="38sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="116dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBarSound" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSound"
        app:layout_constraintRight_toLeftOf="@+id/buttonOK"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.153" />

    <SeekBar
        android:id="@+id/seekBarSound"
        android:layout_width="170dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewMusic"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBarMusic"
        app:layout_constraintHorizontal_bias="0.0" />

    <SeekBar
        android:id="@+id/seekBarMusic"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textViewMusic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <TextView
        android:id="@+id/textViewMusic"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:text="Music Volume"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <TextView
        android:id="@+id/textViewSound"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Sound Volume"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMusic" />

    <TextView
        android:id="@+id/textViewMusicValue"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/seekBarMusic"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <TextView
        android:id="@+id/textViewSoundValue"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="15dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/seekBarMusic"
        app:layout_constraintTop_toBottomOf="@+id/textViewMusicValue" />

</android.support.constraint.ConstraintLayout>
